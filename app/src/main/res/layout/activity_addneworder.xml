<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:id="@+id/linearlayout" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:text="Add Customer Order"/>

        <Spinner
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/spinnercustomer"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"/>

        <Spinner
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/spinnerinventory"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"/>




        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="50 Kgs Bags size"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"
            android:selectAllOnFocus="true"
            android:id="@+id/textquantitybages"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="50 Kgs total bag sze"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"
            android:selectAllOnFocus="true"
            android:id="@+id/textquantitybagtotal"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="30 Kgs Bags size"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"
            android:selectAllOnFocus="true"
            android:id="@+id/text30kgsquantity"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="30 Kgs total bag sze"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"
            android:selectAllOnFocus="true"
            android:id="@+id/text30kgsquantitybagtotal"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="No. of Quantity in Quintals"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="Craft Gothic"
            android:selectAllOnFocus="true"
            android:id="@+id/textnoofquantity"/>
        <EditText
            android:id="@+id/txtprices"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="Craft Gothic"
            android:hint="Enter the Price per Quintals"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/txttotalprice"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="Craft Gothic"
            android:hint="Total Price"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <Button
            android:id="@+id/btnaddorder"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorOffWhite"
            android:layout_marginTop="10dp"
            android:fontFamily="Craft Gothic"
            android:text="Add to Cart"
            android:textSize="16sp"
            android:textStyle="normal|bold" />
        <!-- <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorOffWhite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom|end"
            android:text="Show Added Order"
            android:fontFamily="Craft Gothic"
            android:id="@+id/btn_placeholder"/> -->


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>