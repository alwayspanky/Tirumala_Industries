<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearlayout" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:textSize="22dp"
            android:text="Payment Mode "/>

        <Spinner
            android:layout_width="300dp"
            android:layout_marginTop="30dp"
            android:id="@+id/spinnerpayment"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/txtamount"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="Craft Gothic"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:ems="5"
            android:textColor="@color/colorBlack"
            android:hint="Amount"
            android:selectAllOnFocus="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Payment Amount"
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"
            android:id="@+id/textpaymentamount"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Balance"
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"
            android:id="@+id/textBalance"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Vechile No."
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"
            android:id="@+id/textvechicleno"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Driver Name"
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"
            android:id="@+id/textdrivername"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Driver Mobile No."
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"
            android:id="@+id/textdriverno"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Transaction No./ Cheque No."
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"
            android:id="@+id/textaddress"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textdate"
            android:layout_marginTop="5dp"
            android:fontFamily="Craft Gothic"
            android:hint="Date"
            android:textColor="@color/colorBlack"
            android:selectAllOnFocus="true"/>


        <Button
            android:id="@+id/btnplace"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorOffWhite"
            android:layout_marginTop="15dp"
            android:fontFamily="Craft Gothic"
            android:text="submit"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>